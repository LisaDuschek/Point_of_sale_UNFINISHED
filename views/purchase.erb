<h1><%=@purchase.date()%></h1>

<h1>Here are all products of the purchase:</h1>

<% if @products.any?() %>


  <ul>
    <% @products.each() do |product| %>
    <li><a href="/products/<%= product.id() %>"><%= product.description() %></a></li>
    <% end %>
  </ul>

<% else %>
  <h3>There are no products yet!</h3>
  <% end %>



<form action='/purchases/<%= @purchase.id() %>' method='post'>
  <input name="_method" type="hidden" value="patch">
  <label for="date">Redate this purchase:</label>
  <input id="date" name="date" type="text">

  <button type="submit">Update</button>
</form>


<form action="/purchases/<%= @purchase.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Purchase</button>
</form>




<p><a href="/">Back to home</a></p>
<p><a href="/products">Back to Purchases</a></p>
